{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist/scripts",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["../src/*"]
    },
    "typeRoots": [
      "../node_modules/@types",
      "../src/types"
    ]
  },
  "include": ["./**/*.ts"],
  "references": [
    { "path": "../src" }
  ]
} 